<!-- ======================================= Body ======================================= -->
{{!-- <section class="section" id="page"> --}}
<div class="container" id="page" style="margin-top:100px">
    <div class="row">
        {{#each news}}
        <div class="list-group col-lg-5 col-12 m-auto" id="gameCard">
            <a href="{{this.link}}" id="ignLink">
                <h6>{{this.title}}</h6>
            </a>
            <img class="thumb" src="{{this.img}}">
            <br><br><br><br><br>
            <button class="saveBtn btn-danger" data-ObjectId="{{this._id}}" data-State="{{this.saved}}">
                <i class="fas fa-heart"></i>
            </button>
        </div>
        {{/each}}
    </div>
</div>

